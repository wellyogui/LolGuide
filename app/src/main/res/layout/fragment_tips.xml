<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dimGrey"
    tools:context="com.example.wellington.lolguide.view.ui.details.fragment.TipsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            style="@style/fontTitleStyle"
            android:text="AllyTips: " />

        <TextView
            android:id="@+id/tvAllyTips"
            style="@style/fontText"
            android:text="texto" />

        <TextView
            style="@style/fontTitleStyle"
            android:paddingTop="30dp"
            android:text="EnemyTips: " />

        <TextView
            android:id="@+id/tvEnemyTips"
            style="@style/fontText"
            android:text="texto" />

    </LinearLayout>

</ScrollView>
